<h2>Edit word definition: </h2>
<br><br>
<%= form_for :word, url: word_path(@word), method: :patch do |f| %>
	<p>
		<%= f.label :word %> <br>
		<%= f.text_field :word %>
	</p> <br>

	<p>
		<%= f.label :definition %> <br>
		<%= f.text_area :definition %> 
	</p>

	<p>
		<%= select(:word, :form, [['Noun', 'Noun'], ['Adjective', 'Adjective'], ['Verb', 'Verb']]) %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>